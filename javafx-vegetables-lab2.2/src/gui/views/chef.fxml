<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.controllers.ChefController">
    <columnConstraints>
        <ColumnConstraints />
        <ColumnConstraints />
        <ColumnConstraints />
        <ColumnConstraints />
      <ColumnConstraints />
      <ColumnConstraints />
      <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
    </rowConstraints>
    <children>
      <Button mnemonicParsing="false" text="Count all calories" onAction="#onCountAllCaloriesClick" GridPane.columnIndex="1" />
      <Button mnemonicParsing="false" text="Vegetables sorted by calories" onAction="#onSortByCaloriesClick" GridPane.columnIndex="1" GridPane.rowIndex="1" />
      <Button mnemonicParsing="false" text="Find vegetables with parameters" onAction="#onFindVegetablesClick" GridPane.columnIndex="1" GridPane.rowIndex="2" />
      <TextField fx:id="caloriesTextField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
      <ComboBox fx:id="vegetableStateComboBox" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="6" />
      <Label text="State" GridPane.rowIndex="6" />
      <Label text="Calories" GridPane.rowIndex="3" />
      <Label fx:id="wrongParametersLabel" text="Wrong parameters" textFill="RED" visible="false" GridPane.columnIndex="1" GridPane.rowIndex="8" />
      <TextArea fx:id="vegetablesTextArea" prefHeight="400.0" prefWidth="300.0" GridPane.columnIndex="5" GridPane.rowIndex="0" GridPane.rowSpan="9" />
    </children>
</GridPane>
