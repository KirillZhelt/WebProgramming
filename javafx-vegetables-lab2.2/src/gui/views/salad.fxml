<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.controllers.SaladController">
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
   <children>
      <Button mnemonicParsing="false" onAction="#addVegetable" text="Add new vegetable" GridPane.columnIndex="1" GridPane.rowIndex="3" />
      <ComboBox fx:id="vegetableStateComboBox" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
      <TextField fx:id="vegetableWeightTextField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
      <ComboBox fx:id="vegetableTypeComboBox" prefWidth="150.0" GridPane.columnIndex="1" />
      <Label fx:id="wrongDataLabel" text="Wrong data" textFill="RED" visible="false" GridPane.columnIndex="1" GridPane.rowIndex="4" />
      <TextArea fx:id="vegetablesTextArea" prefHeight="217.0" prefWidth="300.0" GridPane.columnIndex="2" GridPane.columnSpan="2" GridPane.rowSpan="4" />
      <Label text="Weight (gr.)" GridPane.rowIndex="1" />
      <Label text="Vegetable" />
      <Label text="State" GridPane.rowIndex="2" />
      <CheckBox fx:id="sourCreamCheckBox" mnemonicParsing="false" text="Sour cream" GridPane.columnIndex="1" GridPane.rowIndex="5" />
      <CheckBox fx:id="saltCheckBox" mnemonicParsing="false" text="Salt" GridPane.rowIndex="5" />
      <CheckBox fx:id="vegetableOilCheckBox" mnemonicParsing="false" text="Vegetable oil" GridPane.columnIndex="2" GridPane.rowIndex="5" />
      <Button fx:id="createSaladButton" mnemonicParsing="false" onAction="#onCreateSaladButtonClicked" text="Create salad" GridPane.columnIndex="3" GridPane.rowIndex="5" />
      <Button mnemonicParsing="false" text="Delete vegetables" GridPane.rowIndex="3" onAction="#onDeleteVegetablesButtonCLicked" />
   </children>
</GridPane>
